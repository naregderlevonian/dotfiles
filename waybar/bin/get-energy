#!/bin/sh

CURRENT_GOVERNOR=$(cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor)
CURRENT_ENERGY=$(cat /sys/devices/system/cpu/cpu0/cpufreq/energy_performance_preference)

if [[ $CURRENT_GOVERNOR = "powersave" ]]; then
    case $CURRENT_ENERGY in
        performance)
            echo "Performance"
            ;;
        balance_performance)
            echo "Normal"
            ;;
        balance_power)
            echo "Balance"
            ;;  
        power)
            echo "Power Save"
            ;;
    esac
fi

