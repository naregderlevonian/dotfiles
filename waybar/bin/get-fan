#!/bin/sh

CURRENT_FAN=
CURRENT_FAN_VALUE=

for hwmon_dir in /sys/devices/platform/asus-nb-wmi/hwmon/hwmon*/; do
    if [ -f "${hwmon_dir}pwm1_enable" ]; then
        CURRENT_FAN="${hwmon_dir}pwm1_enable"
        CURRENT_FAN_VALUE=$(cat $CURRENT_FAN)
        break
    fi
done

if [ $CURRENT_FAN_VALUE = '0' ]; then
    echo 'Aeration '
else
    echo 'Auto '
fi
